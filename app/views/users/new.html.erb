<div class="container">
  <!-- user login -->
  <h3>Login</h3>
  <form action="/sessions" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <div class="">
      <label>E-mail: </label>
      <input type="text" name="login[email]" placeholder="E-mail">
    </div>
    <div class="">
      <label>Password: </label>
      <input type="password" name="login[password]" placeholder="Password">
    </div>
    <input type="submit" value="Login User">
  </form>

  <!-- user registration -->
  <h3>Register</h3>
  <form action="/users" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <div class="">
      <label>Name: </label>
      <input type="text" name="user[name]" placeholder="Name">
    </div>
    <div class="">
      <label>E-mail: </label>
      <input type="text" name="user[email]" placeholder="E-mail">
    </div>
    <div class="">
      <label>Password: </label>
      <input type="password" name="user[password]" placeholder="Password">
    </div>
    <div class="">
      <label>Password Confirmation: </label>
      <input type="password" name="user[password_confirmation]" placeholder="Password Confirmation">
    </div>
    <div class="">
      <label>Birthdate: </label>
      <input type="date" name="user[birthdate]" placeholder="Birthdate">
    </div>
    <input type="submit" value="Register User">
  </form>

</div>
